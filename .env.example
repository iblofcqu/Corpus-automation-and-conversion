# ===== Django 配置 =====
DJANGO_SECRET_KEY=test-secret-key-for-development
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# ===== 数据库配置 =====
# 开发环境使用 SQLite
DB_ENGINE=django.db.backends.sqlite3
DB_NAME=db.sqlite3

# ===== Celery 配置 =====
CELERY_BROKER_URL=amqp://admin:rabbitmq_dev_password@localhost:5672//
CELERY_RESULT_BACKEND=redis://:redis_dev_password@localhost:6379/0

# ===== DeepSeek API 配置 =====
DEEPSEEK_API_KEY=sk-----------------------
DEEPSEEK_BASE_URL=https://api.deepseek.com
DEEPSEEK_MODEL=deepseek-chat

# ===== MinerU Service 配置 =====
MINERU_API_URL=http://localhost:8000
MINERU_TIMEOUT=300

# ===== 文件上传限制 =====
MAX_UPLOAD_SIZE=52428800  # 50MB in bytes

# ===== 并发控制 =====
CELERY_WORKER_CONCURRENCY=1
